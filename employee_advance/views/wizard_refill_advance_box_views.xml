<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View for Refill Advance Box Wizard -->
    <record id="view_wizard_refill_advance_box_form" model="ir.ui.view">
        <field name="name">wizard.refill.advance.box.form</field>
        <field name="model">wizard.refill.advance.box</field>
        <field name="arch" type="xml">
            <form string="Refill Advance Box">
                <sheet>
                    <group>
                        <group string="EMPLOYEE INFORMATION">
                            <field name="employee_id" readonly="1"/>
                        </group>
                        <group string="ACCOUNTING INFORMATION">
                            <field name="debit_account_id" 
                                   string="Account"
                                   options="{'no_create': True}"
                                   placeholder="113001 เงินทดรองจ่าย"/>
                            <field name="journal_id" 
                                   string="Journal"
                                   options="{'no_create': True}"
                                   placeholder="สมุดรายวันธนาคาร Bank กสิกรไทย เศรษฐกิจ"
                                   required="1"/>
                        </group>
                    </group>
                    
                    <group>
                        <group>
                            <field name="box_id" options="{'no_create': True, 'no_open': True}"/>
                            <field name="current_balance" widget="monetary" readonly="1"/>
                            <field name="base_amount" widget="monetary" readonly="1" invisible="not base_amount"/>
                            <field name="date"/>
                            <field name="amount" widget="monetary" placeholder="0.00" required="1"/>
                        </group>
                        <group>
                            <field name="credit_account_id" 
                                   string="Credit Account"
                                   readonly="1"
                                   force_save="1"/>
                            <field name="currency_id" invisible="1"/>
                            <field name="company_id" invisible="1"/>
                            <field name="journal_bank_id" invisible="1"/>
                            <field name="destination_journal_id" invisible="1"/>
                        </group>
                    </group>
                    
                    <group string="Notes">
                        <field name="notes" nolabel="1" placeholder="Add notes here..."/>
                    </group>
                </sheet>
                <footer>
                    <button name="action_confirm_refill" string="Confirm Refill" type="object" class="btn-primary" data-hotkey="q"/>
                    <button string="Cancel" class="btn-secondary" special="cancel" data-hotkey="z"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action for Refill Advance Box Wizard -->
    <record id="action_wizard_refill_advance_box" model="ir.actions.act_window">
        <field name="name">Refill Advance Box</field>
        <field name="res_model">wizard.refill.advance.box</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="model_employee_advance_box"/>
        <field name="binding_view_types">form</field>
    </record>

</odoo>
