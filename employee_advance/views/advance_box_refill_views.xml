<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View for Advance Box Refill -->
    <record id="view_advance_box_refill_tree" model="ir.ui.view">
        <field name="name">advance.box.refill.tree</field>
        <field name="model">advance.box.refill</field>
        <field name="arch" type="xml">
            <tree string="Refill History" decoration-info="state=='draft'" decoration-success="state=='posted'" decoration-muted="state=='cancel'">
                <field name="date"/>
                <field name="name"/>
                <field name="box_id"/>
                <field name="journal_bank_id"/>
                <field name="amount" sum="Total Amount"/>
                <field name="payment_id"/>
                <field name="state" widget="badge" decoration-info="state=='draft'" decoration-success="state=='posted'" decoration-danger="state=='cancel'"/>
                <field name="currency_id" invisible="1"/>
            </tree>
        </field>
    </record>

    <!-- Form View for Advance Box Refill -->
    <record id="view_advance_box_refill_form" model="ir.ui.view">
        <field name="name">advance.box.refill.form</field>
        <field name="model">advance.box.refill</field>
        <field name="arch" type="xml">
            <form string="Advance Box Refill">
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="draft,posted"/>
                    <button name="action_reset_to_draft" string="Reset to Draft" type="object" 
                            invisible="state != 'cancel'" class="btn-primary"/>
                    <button name="action_cancel" string="Cancel" type="object" 
                            invisible="state != 'draft'" class="btn-secondary"
                            confirm="Are you sure you want to cancel this refill?"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="%(account.action_account_payments)d" type="action" 
                                class="oe_stat_button" icon="fa-money"
                                invisible="not payment_id"
                                context="{'search_default_id': payment_id}">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">View</span>
                                <span class="o_stat_text">Payment</span>
                            </div>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="box_id" readonly="state != 'draft'" options="{'no_create': True}"/>
                            <field name="journal_bank_id" readonly="state != 'draft'"/>
                            <field name="date" readonly="state != 'draft'"/>
                        </group>
                        <group>
                            <field name="amount" readonly="state != 'draft'"/>
                            <field name="currency_id" invisible="1"/>
                            <field name="payment_id" readonly="1"/>
                            <field name="company_id" groups="base.group_multi_company" readonly="1"/>
                        </group>
                    </group>
                    <group string="Notes">
                        <field name="notes" nolabel="1" readonly="state != 'draft'"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Search View for Advance Box Refill -->
    <record id="view_advance_box_refill_search" model="ir.ui.view">
        <field name="name">advance.box.refill.search</field>
        <field name="model">advance.box.refill</field>
        <field name="arch" type="xml">
            <search string="Search Refill History">
                <field name="name"/>
                <field name="box_id"/>
                <field name="journal_bank_id"/>
                <field name="payment_id"/>
                <separator/>
                <filter string="Draft" name="draft" domain="[('state','=','draft')]"/>
                <filter string="Posted" name="posted" domain="[('state','=','posted')]"/>
                <filter string="Cancelled" name="cancel" domain="[('state','=','cancel')]"/>
                <separator/>
                <filter string="This Month" name="this_month" domain="[('date','&gt;=',datetime.datetime.now().strftime('%Y-%m-01'))]"/>
                <filter string="This Year" name="this_year" domain="[('date','&gt;=',datetime.datetime.now().strftime('%Y-01-01'))]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter string="Advance Box" name="group_box" context="{'group_by':'box_id'}"/>
                    <filter string="Bank Journal" name="group_journal" context="{'group_by':'journal_bank_id'}"/>
                    <filter string="State" name="group_state" context="{'group_by':'state'}"/>
                    <filter string="Date" name="group_date" context="{'group_by':'date'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action for Advance Box Refill -->
    <record id="action_advance_box_refill" model="ir.actions.act_window">
        <field name="name">Refill History</field>
        <field name="res_model">advance.box.refill</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_posted': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No refill records yet
            </p>
            <p>
                Refill history tracks all money transfers into advance boxes.
            </p>
        </field>
    </record>

</odoo>
