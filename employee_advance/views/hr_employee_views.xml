<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Add Advance Box field to Employee Form -->
    <record id="view_employee_form_advance_box" model="ir.ui.view">
        <field name="name">hr.employee.form.advance.box</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <!-- Add to Work Information tab -->
            <xpath expr="//page[@name='hr_settings']" position="inside">
                <group string="Advance Settings">
                    <field name="advance_box_id" options="{'no_create': True}"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
