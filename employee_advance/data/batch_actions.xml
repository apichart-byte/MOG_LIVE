<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Server Action for Batch Bill Creation -->
    <record id="action_create_bills_batch" model="ir.actions.server">
        <field name="name">Create Bills (by Vendor)</field>
        <field name="model_id" ref="hr_expense.model_hr_expense_sheet"/>
        <field name="binding_model_id" ref="hr_expense.model_hr_expense_sheet"/>
        <field name="state">code</field>
        <field name="type">ir.actions.server</field>
        <field name="binding_view_types">list</field>
        <field name="groups_id" eval="[(4, ref('hr_expense.group_hr_expense_manager'))]"/>
        <field name="code">
action = {
    'name': 'Batch Bill Creation Wizard',
    'type': 'ir.actions.act_window',
    'res_model': 'hr.expense.sheet.batch.bill.wizard',
    'view_mode': 'form',
    'target': 'new',
    'context': {
        'active_ids': active_ids,
        'active_model': 'hr.expense.sheet',
    }
}
        </field>
    </record>

</odoo>