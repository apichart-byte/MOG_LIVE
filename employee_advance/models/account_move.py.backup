        wht_line = self.line_ids.filtered(
            lambda l: l.tax_line_id == self.wht_tax_id and l.credit > 0
        )
        
        if not wht_line:
            raise UserError(_("No WHT tax line found in this journal entry."))
        
        # Prepare context for WHT certificate wizard
        context = {
            'default_move_id': self.id,
            'default_partner_id': wht_line.partner_id.id,
            'default_date': self.date,
            'default_company_id': self.company_id.id,
            'default_move_line_ids': [(6, 0, wht_line.ids)],
            'default_base_amount': self.wht_base_amount,
            'default_tax_amount': self.wht_amount,
        }
        
        return {
