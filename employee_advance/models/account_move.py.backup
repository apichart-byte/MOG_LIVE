        # Find advance box for the partner if possible
        advance_box = False
        if self.partner_id:
            employee = self._find_employee_from_partner()
            if employee:
                advance_box = self.env['employee.advance.box'].search([
                    ('employee_id', '=', employee.id),
                    ('company_id', '=', self.company_id.id)
