    def action_create_wht_certificate(self):
        """Create WHT Certificate from advance clearing entry"""
        self.ensure_one()
        
        if not self.is_advance_clearing or not self.wht_tax_id:
            raise UserError(_("This is not a WHT advance clearing entry or has no WHT information."))
        
        # Check if WHT certificate module is available
        try:
            if 'l10n.th.account.wht.cert.form.wizard' not in self.env.registry:
                raise UserError(_("Thai WHT Certificate module (l10n_th_account_wht_cert_form) is not installed."))
