        <record id="product_normal_form_view_inherit" model="ir.ui.view">
            <field name="name">product.normal.form.view.inherit</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <notebook position='inside'>
                    <page string="Product Cost">
                        <field name="product_cost_exclude_history_summary_ids" string="Product Cost">
                            <tree>
                                <field name='location_id'/>
                                <field name='qty'/>
                                <field name='standard_price'/>
                                <field name='exclude_from_product_cost' invisible="1"/>
                            </tree>
                        </field>
                    </page>
                </notebook>
            </field>
        </record>
        <record id="product_product_tree_view_inherit" model="ir.ui.view">
            <field name="name">product.normal.tree.view.inherit</field>
            <field name="model">product.product</field>
            <field name="priority">98</field>
            <field name="inherit_id" ref="product.product_product_tree_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='standard_price']" position="attributes">
                    <attribute name="name">main_wh_cost</attribute>
                    <attribute name="string">Cost</attribute>
                </xpath>
            </field>
        </record>

    </data>
