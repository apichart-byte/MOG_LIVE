<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        
        <!-- Security Groups -->
        <record id="group_internal_consume_user" model="res.groups">
            <field name="name">Internal Consume User</field>
            <field name="category_id" ref="base.module_category_inventory_inventory"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="group_internal_consume_manager" model="res.groups">
            <field name="name">Internal Consume Manager</field>
            <field name="category_id" ref="base.module_category_inventory_inventory"/>
            <field name="implied_ids" eval="[(4, ref('group_internal_consume_user'))]"/>
        </record>

        <record id="group_internal_consume_stock" model="res.groups">
            <field name="name">Internal Consume Stock</field>
            <field name="category_id" ref="base.module_category_inventory_inventory"/>
            <field name="implied_ids" eval="[(4, ref('stock.group_stock_user'))]"/>
        </record>

        <!-- Record Rules -->
        
        <!-- User: See only own requests -->
        <record id="internal_consume_request_user_rule" model="ir.rule">
            <field name="name">Internal Consume Request: User sees own requests</field>
            <field name="model_id" ref="model_internal_consume_request"/>
            <field name="domain_force">[('employee_id.user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_internal_consume_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <!-- Manager: See team requests -->
        <record id="internal_consume_request_manager_rule" model="ir.rule">
            <field name="name">Internal Consume Request: Manager sees team requests</field>
            <field name="model_id" ref="model_internal_consume_request"/>
            <field name="domain_force">['|', ('employee_id.user_id', '=', user.id), ('employee_id.parent_id.user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_internal_consume_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <!-- Stock: See all requests -->
        <record id="internal_consume_request_stock_rule" model="ir.rule">
            <field name="name">Internal Consume Request: Stock sees all requests</field>
            <field name="model_id" ref="model_internal_consume_request"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_internal_consume_stock'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

    </data>
</odoo>
