<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Tree View -->
        <record id="view_internal_consume_request_tree" model="ir.ui.view">
            <field name="name">internal.consume.request.tree</field>
            <field name="model">internal.consume.request</field>
            <field name="arch" type="xml">
                <tree string="Stock Requests"
                      decoration-info="state == 'draft'"
                      decoration-warning="state == 'to_approve'"
                      decoration-success="state == 'done'"
                      decoration-danger="state == 'rejected'">
                    <field name="name"/>
                    <field name="request_date"/>
                    <field name="employee_id"/>
                    <field name="department_id"/>
                    <field name="manager_id"/>
                    <field name="warehouse_id"/>
                    <field name="state" widget="badge"
                           decoration-info="state == 'draft'"
                           decoration-warning="state == 'to_approve'"
                           decoration-primary="state == 'approved'"
                           decoration-success="state == 'done'"
                           decoration-danger="state == 'rejected'"/>
                    <button name="action_duplicate_request"
                            type="object"
                            icon="fa-copy"
                            title="Duplicate Request"
                            invisible="state in ('to_approve', 'approved')"/>
                </tree>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_internal_consume_request_form" model="ir.ui.view">
            <field name="name">internal.consume.request.form</field>
            <field name="model">internal.consume.request</field>
            <field name="arch" type="xml">
                <form string="Stock Request">
                    <header>
                        <button name="action_duplicate_request"
                                string="Duplicate"
                                type="object"
                                icon="fa-copy"
                                invisible="state in ('to_approve', 'approved')"/>
                        <button name="action_submit"
                                string="Submit for Approval"
                                type="object"
                                class="oe_highlight"
                                invisible="state != 'draft' or not allow_submit"/>
                        <button name="action_approve"
                                string="Approve"
                                type="object"
                                class="oe_highlight"
                                invisible="state != 'to_approve' or has_insufficient_stock"
                                groups="internal_consume_request.group_internal_consume_manager"/>
                        <button name="action_reject"
                                string="Reject"
                                type="object"
                                invisible="state != 'to_approve'"
                                groups="internal_consume_request.group_internal_consume_manager"/>
                        <button name="action_create_picking"
                                string="Create Transfer"
                                type="object"
                                invisible="state != 'approved' or picking_id"
                                groups="internal_consume_request.group_internal_consume_stock"/>
                        <button name="action_done"
                                string="Done"
                                type="object"
                                class="oe_highlight"
                                invisible="state != 'approved'"
                                groups="internal_consume_request.group_internal_consume_stock"/>
                        <button name="action_set_to_draft"
                                string="Set to Draft"
                                type="object"
                                invisible="state != 'rejected'"
                                groups="internal_consume_request.group_internal_consume_manager"/>
                        <field name="state" widget="statusbar"
                               statusbar_visible="draft,to_approve,approved,done"/>
                    </header>
                    <!-- Stock Warning Banner -->
                    <div class="alert alert-danger" role="alert" 
                         style="margin-bottom: 0px;" 
                         invisible="not has_insufficient_stock">
                        <strong>⚠️ Stock Insufficient!</strong> 
                        Some items do not have enough stock. Please check available quantities below. 
                        You cannot submit this request until stock is sufficient.
                    </div>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_picking" 
                                    type="object" 
                                    class="oe_stat_button" 
                                    icon="fa-truck"
                                    invisible="picking_count == 0">
                                <field name="picking_count" widget="statinfo" string="Transfer"/>
                            </button>
                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group name="request_info">
                                <field name="request_date"/>
                                <field name="employee_id"/>
                                <field name="department_id"/>
                                <field name="responsible_id"/>
                                <field name="manager_id"/>
                            </group>
                            <group name="location_info">
                                <field name="warehouse_id" options="{'no_create': True}"/>
                                <field name="picking_type_id"/>
                                <field name="location_id"/>
                                <field name="location_dest_id"/>
                                <field name="partner_id" invisible="1"/>
                                <field name="has_insufficient_stock" invisible="1"/>
                                <field name="allow_submit" invisible="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Products" name="products">
                                <field name="line_ids" 
                                       readonly="state in ('to_approve', 'approved', 'done', 'rejected')">
                                    <tree string="Request Lines" 
                                          editable="bottom"
                                          decoration-danger="qty_requested &gt; available_qty">
                                        <field name="sequence" widget="handle"/>
                                        <field name="line_number" string="No." readonly="1"/>
                                        <field name="product_id"
                                               domain="[('type', 'in', ['consu', 'product'])]"
                                               required="1"/>
                                        <field name="description"/>
                                        <field name="qty_requested" string="Qty Requested"/>
                                        <field name="product_uom_id" groups="uom.group_uom"/>
                                        <field name="analytic_distribution" required="1" widget="analytic_distribution"/>
                                        <field name="available_qty" string="Available" 
                                               decoration-danger="qty_requested &gt; available_qty"
                                               decoration-success="qty_requested &lt;= available_qty"/>
                                        <field name="qty_done" string="Qty Done" optional="show"/>
                                        <button name="action_duplicate_line" 
                                                type="object" 
                                                icon="fa-copy" 
                                                title="Duplicate Line"
                                                invisible="state in ('to_approve', 'approved', 'done', 'rejected')"/>
                                        <field name="product_uom_category_id" column_invisible="1"/>
                                        <field name="location_id" column_invisible="1"/>
                                        <field name="state" column_invisible="1"/>
                                        <field name="analytic_precision" column_invisible="1"/>
                                    </tree>
                                </field>
                                <group string="Reason For Requisition">
                                    <field name="reason_for_requisition" placeholder="กรุณาระบุเหตุผลในการขอเบิกวัสดุ/อุปกรณ์..."/>
                                </group>
                            </page>
                            <page string="Other Info" name="other_info">
                                <group>
                                    <group>
                                        <field name="picking_id" readonly="1"/>
                                    </group>
                                    <group>
                                        <field name="rejection_reason"
                                               readonly="1"
                                               invisible="state != 'rejected'"
                                               widget="text"/>
                                        <field name="reason"
                                               readonly="1"
                                               invisible="not reason"
                                               widget="text"
                                               string="Auto Reject Reason"/>
                                    </group>
                                </group>
                                <group>
                                    <field name="notes" placeholder="Additional notes..."/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Search View -->
        <record id="view_internal_consume_request_search" model="ir.ui.view">
            <field name="name">internal.consume.request.search</field>
            <field name="model">internal.consume.request</field>
            <field name="arch" type="xml">
                <search string="Search Internal Consume Requests">
                    <field name="name" string="Reference"/>
                    <field name="employee_id"/>
                    <field name="department_id"/>
                    <field name="manager_id"/>
                    <field name="warehouse_id"/>
                    <separator/>
                    <filter string="My Requests" name="my_requests"
                            domain="[('employee_id.user_id', '=', uid)]"/>
                    <filter string="To Approve" name="to_approve"
                            domain="[('state', '=', 'to_approve')]"/>
                    <filter string="Approved" name="approved"
                            domain="[('state', '=', 'approved')]"/>
                    <filter string="Done" name="done"
                            domain="[('state', '=', 'done')]"/>
                    <separator/>
                    <filter string="Draft" name="draft"
                            domain="[('state', '=', 'draft')]"/>
                    <filter string="Rejected" name="rejected"
                            domain="[('state', '=', 'rejected')]"/>
                    <separator/>
                    <filter string="Request Date" name="request_date"
                            date="request_date"/>
                    <group expand="0" string="Group By">
                        <filter string="Employee" name="group_employee"
                                context="{'group_by': 'employee_id'}"/>
                        <filter string="Department" name="group_department"
                                context="{'group_by': 'department_id'}"/>
                        <filter string="Manager" name="group_manager"
                                context="{'group_by': 'manager_id'}"/>
                        <filter string="Status" name="group_state"
                                context="{'group_by': 'state'}"/>
                        <filter string="Request Date" name="group_request_date"
                                context="{'group_by': 'request_date'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Action -->
        <record id="action_internal_consume_request" model="ir.actions.act_window">
            <field name="name">Stock Requests</field>
            <field name="res_model">internal.consume.request</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_internal_consume_request_search"/>
            <field name="context">{'search_default_my_requests': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first Internal Consume Request
                </p>
                <p>
                    Request internal consumable items from warehouse stock.
                </p>
            </field>
        </record>

        <!-- Action for To Approve -->
        <record id="action_internal_consume_request_to_approve" model="ir.actions.act_window">
            <field name="name">Requests to Approve</field>
            <field name="res_model">internal.consume.request</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_internal_consume_request_search"/>
            <field name="context">{'search_default_to_approve': 1}</field>
            <field name="domain">[('state', '=', 'to_approve')]</field>
        </record>

    </data>
</odoo>
