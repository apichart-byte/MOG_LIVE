<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit Settings View to Add MRP Stock Request Options -->
    <record id="res_config_settings_view_form_stock_request" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.stock.request</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="mrp.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//app[@name='mrp']" position="inside">
                <block title="Stock Requests">
                    <setting help="Enable stock requests for manufacturing">
                        <field name="group_mrp_stock_request_user"/>
                    </setting>
                    <div invisible="not group_mrp_stock_request_user">
                        <div class="content-group">
                            <div class="row mt16">
                                <label string="Stock Request Source Location" for="stock_request_source_location_id"/>
                                <field name="stock_request_source_location_id"/>
                            </div>
                            <div class="row mt16">
                                <label string="Stock Request Destination Location" for="stock_request_dest_location_id"/>
                                <field name="stock_request_dest_location_id"/>
                            </div>
                        </div>
                    </div>
                </block>
            </xpath>
        </field>
    </record>
</odoo>