<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Security Groups -->
    <record id="group_mrp_stock_request_user" model="res.groups">
        <field name="name">MRP Stock Request User</field>
        <field name="category_id" ref="base.module_category_manufacturing"/>
        <field name="comment">The user will be able to view and create stock requests for manufacturing.</field>
    </record>

    <record id="group_mrp_stock_request_manager" model="res.groups">
        <field name="name">MRP Stock Request Manager</field>
        <field name="category_id" ref="base.module_category_manufacturing"/>
        <field name="implied_ids" eval="[(4, ref('group_mrp_stock_request_user'))]"/>
        <field name="comment">The user will have full access to stock requests for manufacturing, including deletion.</field>
    </record>

    <!-- Record Rules for Multi-Company Support -->
    <record id="rule_mrp_stock_request_company" model="ir.rule">
        <field name="name">MRP Stock Request Company Rule</field>
        <field name="model_id" ref="model_mrp_stock_request"/>
        <field name="domain_force">[('company_id', 'in', company_ids)]</field>
        <field name="groups" eval="[(4, ref('group_mrp_stock_request_user'))]"/>
    </record>

    <record id="rule_mrp_stock_request_line_company" model="ir.rule">
        <field name="name">MRP Stock Request Line Company Rule</field>
        <field name="model_id" ref="model_mrp_stock_request_line"/>
        <field name="domain_force">[('request_id.company_id', 'in', company_ids)]</field>
        <field name="groups" eval="[(4, ref('group_mrp_stock_request_user'))]"/>
    </record>

    <!-- Record Rules for Confirmation Wizard -->
    <record id="rule_mrp_stock_request_confirm_wizard_company" model="ir.rule">
        <field name="name">MRP Stock Request Confirm Wizard Company Rule</field>
        <field name="model_id" ref="model_mrp_stock_request_confirm_wizard"/>
        <field name="domain_force">[('request_id.company_id', 'in', company_ids)]</field>
        <field name="groups" eval="[(4, ref('group_mrp_stock_request_user'))]"/>
    </record>
</odoo>