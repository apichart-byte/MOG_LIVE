<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Stock Valuation Layer View with Location -->
        <record id="view_stock_valuation_layer_tree_with_location" model="ir.ui.view">
            <field name="name">stock.valuation.layer.tree.location</field>
            <field name="model">stock.valuation.layer</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="create_date"/>
                    <field name="product_id"/>
                    <field name="location_id"/>
                    <field name="quantity"/>
                    <field name="unit_cost"/>
                    <field name="value"/>
                    <field name="company_id"/>
                </tree>
            </field>
        </record>
        
        <record id="view_stock_valuation_layer_form_with_location" model="ir.ui.view">
            <field name="name">stock.valuation.layer.form.location</field>
            <field name="model">stock.valuation.layer</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="product_id" readonly="1"/>
                                <field name="location_id" readonly="1"/>
                                <field name="company_id" readonly="1"/>
                            </group>
                            <group>
                                <field name="create_date" readonly="1"/>
                                <field name="quantity" readonly="1"/>
                                <field name="unit_cost" readonly="1"/>
                            </group>
                        </group>
                        <group>
                            <field name="value" readonly="1"/>
                            <field name="description" readonly="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
    </data>
</odoo>
