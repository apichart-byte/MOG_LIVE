<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        
        <!-- Configuration Parameters for Module Settings -->
        
        <!-- Shortage handling policy: 'error' (block) or 'fallback' (allow fallback) -->
        <record id="config_shortage_policy" model="ir.config_parameter">
            <field name="key">stock_fifo_by_location.shortage_policy</field>
            <field name="value">error</field>
        </record>
        
        <!-- Enable location validation during moves -->
        <record id="config_enable_validation" model="ir.config_parameter">
            <field name="key">stock_fifo_by_location.enable_validation</field>
            <field name="value">True</field>
        </record>
        
        <!-- Debug mode for additional logging -->
        <record id="config_debug_mode" model="ir.config_parameter">
            <field name="key">stock_fifo_by_location.debug_mode</field>
            <field name="value">False</field>
        </record>
        
    </data>
</odoo>
