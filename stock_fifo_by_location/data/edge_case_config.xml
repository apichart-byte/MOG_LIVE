<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Configuration Parameters for Edge Case Handling -->
        
        <!-- Negative Balance Validation Mode -->
        <record id="config_negative_balance_mode" model="ir.config_parameter">
            <field name="key">stock_fifo_by_location.negative_balance_mode</field>
            <field name="value">warning</field>
            <!-- Options: 'strict', 'warning', 'disabled' -->
        </record>
        
        <!-- Negative Balance Tolerance (in units) -->
        <record id="config_negative_balance_tolerance" model="ir.config_parameter">
            <field name="key">stock_fifo_by_location.negative_balance_tolerance</field>
            <field name="value">0.01</field>
        </record>
        
        <!-- Auto-suggest Transfers on Shortage -->
        <record id="config_auto_suggest_transfers" model="ir.config_parameter">
            <field name="key">stock_fifo_by_location.auto_suggest_transfers</field>
            <field name="value">True</field>
        </record>
        
        <!-- Max Fallback Warehouses to Show -->
        <record id="config_max_fallback_warehouses" model="ir.config_parameter">
            <field name="key">stock_fifo_by_location.max_fallback_warehouses</field>
            <field name="value">5</field>
        </record>
        
    </data>
</odoo>
