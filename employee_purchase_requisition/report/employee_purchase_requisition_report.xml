<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Paper Format for Employee Purchase Requisition Reports -->
    <record id="paperformat_employee_purchase_requisition_report" model="report.paperformat">
        <field name="name">Employee Purchase Requisition Report A4</field>
        <field name="default" eval="True"/>
        <field name="format">A4</field>
        <field name="orientation">Landscape</field>
        <field name="margin_top">2</field>
        <field name="margin_bottom">10</field>
        <field name="margin_left">4</field>
        <field name="margin_right">4</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">8</field>
        <field name="dpi">90</field>
    </record>


    <!-- Report Template -->
    <template id="employee_purchase_requisition_report_document">
        <t t-name="employee_purchase_requisition.employee_purchase_requisition_report_document">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.external_layout">
                        <div class="page">
                            
                            
                            <style>
                                @font-face {
                                    font-family: 'Sarabun';
                                    src: url('/buz_custom_po/static/fonts/Sarabun-Bold.ttf') format('truetype');
                                    font-weight: bold;
                                    font-style: normal;
                                }
                                @page {
                                    margin-top: 0mm;
                                    margin-bottom: 10mm;
                                    margin-left: 10mm;
                                    margin-right: 10mm;
                                }
                                
                                body, .page, .row {
                                    margin-top: 0 !important;
                                    padding-top: 0 !important;
                                }
                                
                                html, body, page, table, th, td, div, p, span, h1, h2, h3, h4, h5, h6 {
                                    font-family: 'Sarabun', sans-serif !important;
                                    font-size: 18px;
                                }
                                
                                .table {
                                    border-collapse: collapse !important;
                                    width: 100%;
                                }
                                
                                .table td,
                                .table th {
                                    border-width: 0.5px !important;
                                    border-style: solid !important;
                                    border-color: #000 !important;
                                    padding:  1px 1px;
                                }
    
                                .order-line-table th,
                                .order-line-table td {
                                    padding-top: 10px !important;
                                    padding-bottom: 10px !important;
                                   line-height: 1.1 !important;
                                }
                                
                                .no-inner-borders td,
                                .no-inner-borders th {
                                    border: none !important;
                                }
                                
                                .table-bordered,
                                .table-bordered td,
                                .table-bordered th {
                                    border: none !important;
                                }
    
                                .page {
                                    page-break-after: always;
                                }
                                .page:last-child {
                                    page-break-after: auto;
                                }
    
                                .page-break {
                                    page-break-after: always;
                                  }
    
                                .vendor-info, .delivery-info {
                                    font-size: 14px;
                                }
                    
                                .line.name{
                                    max-width: 100px;
                                    white-space: nowrap;
                                    overflow: hidden;
                                    text-overflow: ellipsis;
                                }
                                .footer-fixed {
                                    position: absolute;
                                    bottom: 0;
                                    width: 100%;
                                    font-size: 16px;
                                    display: flex;
                                    justify-content: space-between;
                                  }
                                  @page {
                                    margin: 10mm 10mm 20mm 10mm; /* ซ้าย ขวา บน ล่าง */
                                    @bottom-left {
                                        content: "อนุมัติใช้วันที่ 14/09/2563";
                                        font-size: 14px;
                                    }
                                    @bottom-right {
                                        content: "FM-PUR-08.REV.01";
                                        font-size: 14px;
                                    }
                                    }
                            </style>

                <!-- ส่วนหัว (Header) -->
                <div class="row mb-2">
                    <div class="col-8">
                        <div style="font-size: 18px;">
                            <div class="mb-1"><strong>บริษัท โมเก้น จำกัด (สำนักงานใหญ่)</strong></div>
                            <div style="font-size: 16px;">9 หมู่ 12 ตำบลบึงคำพร้อย อำเภอลำลูกกา จ.ปทุมธานี 12150</div>
                            <div style="font-size: 16px;">เลขที่ประจำตัวผู้เสียภาษี 0105547076103</div>
                            <div style="font-size: 16px;">โทร 02 1509710 E-mail: contact@mogen.co.th</div>
                        </div>
                    </div>
                    <div class="col-4 text-end">
                        <img t-if="o.company_id.logo" t-att-src="image_data_uri(o.company_id.logo)" style="width: 180px; height: auto; object-fit: contain;" alt="Company Logo"/>
                    </div>
                </div>
    
                <!-- Document Title -->
                <div class="row mb-2">
                    <div class="col-12 text-center">
                        <h2 style="margin: 0; padding: 0; font-weight: bold; font-size: 26px; margin-top: -40px;">ใบสั่งซื้อ / PURCHASE ORDER</h2>
                    </div>
                </div>

                <div style="display: flex; justify-content: space-between; width: 100%; margin-top: 10px; font-size: 14px;">
                    <!-- ซ้ายสุด: วันที่ขอ -->
                    <div style="width: 33%; text-align: left;">
                        <strong>วันที่ขอ:</strong>
                        <t t-esc="o.request_date.strftime('%d/%m/%Y') if o.request_date else ''"/>
                    </div>
                
                    <!-- กลาง: แผนที่ขอ -->
                    <div style="width: 33%; text-align: center;">
                        <strong>แผนที่ขอ:</strong>
                        <t t-esc="o.request_plan"/>
                    </div>
                
                    <!-- ขวาสุด: เลขที่ใบที่ขอ -->
                    <div style="width: 33%; text-align: right;">
                        <strong>เลขที่ใบที่ขอ:</strong>
                        <t t-esc="o.request_number"/>
                    </div>
                </div>

                      <!-- Order Lines -->
                      <table style="width: 100%; border-collapse: collapse; font-size: 12px; border: 1px solid #000;">
                        <tr style="background-color: #f0f0f0;">
                          <th style="width: 2%; text-align: center; border: 1px solid #000;">ลำดับ</th>
                          <th style="width: 2%; text-align: center; border: 1px solid #000;">รหัสค่าใช้จ่าย</th>
                          <th style="width: 5%; text-align: center; border: 1px solid #000;">รหัสสินค้า</th>
                          <th style="width: 12%; text-align: center; border: 1px solid #000;">ชื่อสินค้า</th>
                          <th style="width: 3%; text-align: center; border: 1px solid #000;">สินค้าคงเหลือ</th>
                          <th style="width: 2%; text-align: center; border: 1px solid #000;">จำนวนขอซื้อ</th>
                          <th style="width: 3%; text-align: center; border: 1px solid #000;">หน่วย</th>
                          <th style="width: 3%; text-align: center; border: 1px solid #000;">ราคา/หน่วย</th>
                          <th style="width: 4%; text-align: center; border: 1px solid #000;">จำนวนเงินรวม</th>
                          <th style="width: 4%; text-align: center; border: 1px solid #000;">วันที่ต้องการ</th>
                          <th style="width: 8%; text-align: center; border: 1px solid #000;">ผู้จัดจำหน่าย</th>
                          <th style="width: 6%; text-align: center; border: 1px solid #000;">สถานที่ส่ง/คลัง<br/><span style="font-weight: normal;">Place of Delivery</span></th>
                          <th style="width: 6%; text-align: center; border: 1px solid #000;">วัตถุประสงค์การขอซื้อ / งานที่ใช้</th>
                        </tr>
                        <!-- Loop for lines -->
                        <t t-set="counter" t-value="1"/>
                        <t t-foreach="o.requisition_order_ids" t-as="line" t-index="line_index">
                          <tr>
                            <td style="text-align: center; border: 1px solid #000;"><t t-esc="line_index + 1"/></td>
                            <td style="border: 1px solid #000; text-align: right;"></td>
                            <td style="text-align: center; border: 1px solid #000;"><t t-esc="line.product_id.default_code or ''"/></td>
                            <td style="text-align: center; border: 1px solid #000;"><t t-esc="line.product_id.name or ''"/></td>
                            <td style="border: 1px solid #000;"></td>
                            <td style="border: 1px solid #000; text-align: right;"><t t-esc="line.quantity or ''"/></td>
                            <td style="border: 1px solid #000; text-align: center;"><t t-esc="line.product_id.uom_id.name or ''"/></td>
                            <td style="border: 1px solid #000; text-align: center;">
                                <t t-if="'unit_price' in line">
                                       <t t-esc="line.unit_price"/>
                                   </t>
                               </td>
                            <td style="border: 1px solid #000; text-align: center;">
                                <t t-esc="'{:,.2f}'.format((line.quantity or 0.0) * (line.unit_price or 0.0))"/>
                            </td>
                            <td style="border: 1px solid #000; text-align: center;">
                              <t t-esc="'need_date' in line and line['need_date'] and line['need_date'].strftime('%d/%m/%Y') or ''"/>
                            </td>
                            <td style="border: 1px solid #000; text-align: center;">
                              <t t-if="line.partner_id">
                                <t t-esc="line.partner_id.name"/>
                              </t>
                            </td>
                             <td style="border: 1px solid #000; text-align: center;">
                              <t t-if="'delivery_location_id' in line and line['delivery_location_id']">
                                  <t t-esc="line['delivery_location_id'].display_name"/>
                              </t>
                            </td>
                            <td style="border: 1px solid #000;">
                              <t t-if="'reason_requisition' in line and line['reason_requisition']">
                                  <t t-esc="line['reason_requisition']"/>
                              </t>
                            </td>
                          </tr>
                        </t>

                        <tr>
                            <td colspan="5" style="text-align: center; font-weight: bold; border: 1px solid #000;">รวม TOTAL</td>
                            <td style="border: 1px solid #000;">
                                <t t-esc="'%.2f' % sum((l.quantity or 0.0) for l in o.requisition_order_ids)"/>
                            </td>
                            <td style="border: 1px solid #000;"></td>
                            <td style="border: 1px solid #000;"></td>
                            <td style="text-align: right; font-weight: bold; border: 1px solid #000;">
                                <t t-esc="'%.2f' % sum((l.quantity or 0.0) * (l.unit_price or 0.0) for l in o.requisition_order_ids)"/>
                            </td>
                            <td style="border: 1px solid #000;"></td>
                            <td style="border: 1px solid #000;"></td>
                            <td style="text-align: right; font-weight: bold; border: 1px solid #000;"></td>
                            <td colspan="4" style="border: 1px solid #000;"></td>
                          </tr>
                          
                      </table>
                      
                      <div style="margin-top:15px;">
                        <strong>หมายเหตุ:</strong>
                        <t t-set="note_text" t-value="o.note or ''"/>
                        <span t-esc="note_text"/>
                      </div>


                        <div style="margin-top:10px;">
                                    <br/>
                                    <p>*** ในกรณีที่เป็นสินค้าใหม่. สินค้าที่กำหนด Spec. เฉพาะเเผนก หรือสินค้าที่ไม่มีการขอซื้อมานานเกินกว่า 1 ปี ให้เเนบเอกสารระบุ Spec สินค้าให้ชัดเจน เพื่อความรวดเร็วในการจัดหาสินค้าให้ได้ตามต้องการ ***</p>
                                    
                        </div>  


                        <table style="width: 100%; border-collapse: collapse; margin-top: 20px; text-align: center;">
  <tr>
    <!-- กรอบที่ 1: ผู้ขอซื้อ / Requested -->
    <td style="width: 33.33%; border: 1px solid #000; padding: 8px; vertical-align: top; text-align: center;">
      <div><strong>ผู้ขอซื้อ / Requested</strong></div><br/>
      <div style="padding-top: 10px;">......................................................</div>
      <div style="padding-top: 10px;">วันที่ ...............................................</div>
    </td>

    <!-- กรอบที่ 2: ผู้ตรวจสอบ / Checked -->
    <td style="width: 33.33%; border: 1px solid #000; padding: 8px; vertical-align: top; text-align: center;">
      <div><strong>ผู้ตรวจสอบ / Checked</strong></div><br/>
      <div style="padding-top: 10px;">......................................................</div>
      <div style="padding-top: 10px;">วันที่ ...............................................</div>
    </td>

    <!-- กรอบที่ 3: ผู้อนุมัติ / App -->
    <td style="width: 33.33%; border: 1px solid #000; padding: 8px; vertical-align: top; text-align: center;">
      <div><strong>ผู้อนุมัติ / App</strong></div><br/>
      <div style="padding-top: 10px;">......................................................</div>
      <div style="padding-top: 10px;">วันที่ ...............................................</div>
    </td>
  </tr>
</table>



                           <div style="margin: 0; display: flex; justify-content: space-between; font-size: 4px;">
                              <span>อนุมัติใช้วันที่ 02/08/2565</span>
                              <span>FM-PUR-02.REV.02</span>
                            </div>
                  



                        </div>
                    </t>
                </t>
            </t>
        </t>
    </template>



    <record id="action_employee_purchase_requisition_report" model="ir.actions.report">
        <field name="name">ขออนุมัติซื้อ/Purchase Requisition</field>
        <field name="model">employee.purchase.requisition</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">employee_purchase_requisition.employee_purchase_requisition_report_document</field>
        <field name="report_file">employee_purchase_requisition.employee_purchase_requisition_report_document</field>
        <field name="print_report_name">'Employee Purchase Requisition - %s' % object.name</field>
        <field name="binding_model_id" ref="model_employee_purchase_requisition"/>
        <field name="binding_type">report</field>
        <field name="paperformat_id" ref="paperformat_employee_purchase_requisition_report"/>
   </record>
</odoo>