<?xml version="1.0" encoding="utf-8"?>
<odoo>
<!-- Receipt Voucher Report Template -->
<template id="report_account_receipt_voucher">
    <t t-call="web.html_container">
        <t t-foreach="docs" t-as="o">
            <t t-call="web.external_layout">
                <div class="page">
                    <div class="oe_structure"/>
                    <div class="row">
                        <div class="col-6">
                            <h3>Receipt Voucher</h3>
                        </div>
                        <div class="col-6">
                            <div class="text-right">
                                <strong>Voucher No:</strong> <span t-field="o.name"/>
                                <br/>
                                <strong>Date:</strong> <span t-field="o.date"/>
                            </div>
                        </div>
                    </div>
                    <div class="row mt32">
                        <div class="col-6">
                            <div class="row">
                                <div class="col-6">
                                    <strong>Company:</strong>
                                </div>
                                <div class="col-6">
                                    <span t-field="o.company_id.name"/>
                                </div>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="row">
                                <div class="col-6">
                                    <strong>Total Amount:</strong>
                                </div>
                                <div class="col-6 text-right">
                                    <span t-field="o.amount_total" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row mt32">
                        <div class="col-12">
                            <table class="table table-sm o_main_table">
                                <thead>
                                    <tr>
                                        <th>Receipt No</th>
                                        <th>Customer</th>
                                        <th>Amount (This Voucher)</th>
                                        <th>Remark</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr t-foreach="o.line_ids" t-as="line">
                                        <td>
                                            <span t-field="line.receipt_id.name"/>
                                        </td>
                                        <td>
                                            <span t-field="line.partner_id.name"/>
                                        </td>
                                        <td>
                                            <span t-field="line.amount_to_receive" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                        </td>
                                        <td>
                                            <!-- Add any remarks here if needed -->
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="row mt32">
                        <div class="col-6">
                            <p>
                                <strong>Note:</strong> <span t-field="o.note"/>
                            </p>
                        </div>
                        <div class="col-6">
                            <table class="table table-sm">
                                <tr>
                                    <td><strong>Total Amount</strong></td>
                                    <td class="text-right">
                                        <span t-field="o.amount_total" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                    <div class="row mt32">
                        <div class="col-12">
                            <p><em>This voucher generates one payment per customer.</em></p>
                        </div>
                    </div>
                    <div class="oe_structure"/>
                </div>
            </t>
        </t>
    </t>
</template>
</odoo>