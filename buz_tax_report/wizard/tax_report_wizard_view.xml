<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_tax_report_wizard_form" model="ir.ui.view">
        <field name="name">tax.report.wizard.form</field>
        <field name="model">tax.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Tax Report XLSX">
                <group>
                    <group>
                        <field name="date_from"/>
                        <field name="date_to"/>
                    </group>
                    <group>
                        <field name="company_id"/>
                        <field name="tax_type"/>
                        <field name="display_details"/>
                        <field name="report_name"/>
                    </group>
                </group>
                <footer>
                    <button string="Cancel" class="btn btn-secondary" special="cancel"/>
                    <button string="Generate Excel Report" type="object" name="action_generate_xlsx" class="btn btn-primary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
