<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <record id="view_tax_report_wizard_form" model="ir.ui.view">
      <field name="name">tax.report.wizard.form</field>
      <field name="model">tax.report.wizard</field>
      <field name="arch" type="xml">
        <form string="Tax Report XLSX">
          <group>
            <group string="Quick Configuration">
              <field name="tax_config_id" options="{'no_create': True}"/>
            </group>
          </group>
          <group>
            <group>
              <field name="date_from"/>
              <field name="date_to"/>
              <field name="company_id"/>
            </group>
            <group>
              <field name="tax_type"/>
              <field name="display_details"/>
            </group>
          </group>
          <group string="Advanced Options">
            <field name="specific_tax_ids" widget="many2many_tags" placeholder="Select specific taxes (optional)"/>
          </group>
          <footer>
            <button string="Cancel" class="btn btn-secondary" special="cancel"/>
            <button string="Save as Configuration" type="object" name="action_save_as_config" class="btn btn-link" help="Save current settings as a reusable configuration"/>
            <button string="Generate Excel Report" type="object" name="action_generate_xlsx" class="btn btn-primary"/>
          </footer>
        </form>
      </field>
    </record>
  </data>
</odoo>
