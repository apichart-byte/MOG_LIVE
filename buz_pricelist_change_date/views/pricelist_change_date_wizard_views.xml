<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_pricelist_change_date_wizard_form" model="ir.ui.view">
        <field name="name">pricelist.change.date.wizard.form</field>
        <field name="model">pricelist.change.date.wizard</field>
        <field name="arch" type="xml">
            <form string="Change Pricelist Dates">
                <group>
                    <field name="pricelist_id" readonly="1"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                </group>
                <footer>
                    <button name="action_apply" 
                            type="object" 
                            string="Apply" 
                            class="btn-primary"/>
                    <button string="Cancel" 
                            class="btn-secondary" 
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_pricelist_change_date_wizard" model="ir.actions.act_window">
        <field name="name">Change Pricelist Dates</field>
        <field name="res_model">pricelist.change.date.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>