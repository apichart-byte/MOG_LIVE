<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_template_search_view_inherit_old_code" model="ir.ui.view">
        <field name="name">product.template.search.inherit.old.code</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_search_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="old_product_code" string="Old Product Code"/>
            </xpath>
        </field>
    </record>
    
    <record id="product_template_form_view_inherit_old_code" model="ir.ui.view">
        <field name="name">product.template.form.inherit.old.code</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <!-- More reliable insertion: put old_product_code inside the main sheet -->
            <xpath expr="//sheet" position="inside">
                <group>
                    <field name="old_product_code"/>
                </group>
            </xpath>
        </field>
    </record>

    <record id="product_template_tree_view_inherit_old_code" model="ir.ui.view">
        <field name="name">product.template.tree.inherit.old.code</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_tree_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='default_code']" position="after">
                <field name="old_product_code"/>
            </xpath>
        </field>
    </record>
</odoo>