<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Security Group for Valuation Regeneration -->
        <record id="group_valuation_regenerate_manager" model="res.groups">
            <field name="name">Valuation Regeneration Manager</field>
            <field name="category_id" ref="base.module_category_inventory_inventory"/>
            <field name="implied_ids" eval="[(4, ref('stock.group_stock_manager')), (4, ref('account.group_account_manager'))]"/>
            <field name="comment">Users in this group can delete and regenerate stock valuation layers and related journal entries.</field>
        </record>
        
        <!-- Record rule to allow deletion of SVL for company -->
        <record id="stock_valuation_layer_company_rule" model="ir.rule">
            <field name="name">Stock Valuation Layer: regenerate access</field>
            <field name="model_id" ref="stock_account.model_stock_valuation_layer"/>
            <field name="groups" eval="[(4, ref('group_valuation_regenerate_manager'))]"/>
            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>
    </data>
</odoo>
