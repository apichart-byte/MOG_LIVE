<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Security Rules for Marketplace Settlement -->
    
    <!-- Record Rules -->
    <record id="marketplace_settlement_user_rule" model="ir.rule">
        <field name="name">Marketplace Settlement: User Access</field>
        <field name="model_id" ref="model_marketplace_settlement"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('account.group_account_invoice'))]"/>
    </record>

    <record id="marketplace_settlement_manager_rule" model="ir.rule">
        <field name="name">Marketplace Settlement: Manager Access</field>
        <field name="model_id" ref="model_marketplace_settlement"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('account.group_account_user'))]"/>
    </record>

</odoo>
