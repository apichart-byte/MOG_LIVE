<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Fee Allocation Import Wizard Form -->
    <record id="view_marketplace_fee_allocation_import_wizard_form" model="ir.ui.view">
        <field name="name">marketplace.fee.allocation.import.wizard.form</field>
        <field name="model">marketplace.fee.allocation.import.wizard</field>
        <field name="arch" type="xml">
            <form string="Import Fee Allocations from CSV">
                <sheet>
                    <div class="oe_title">
                        <h1>Import Fee Allocations</h1>
                        <p>Import exact fee allocation values from marketplace CSV reports (e.g., Shopee, Lazada payout files)</p>
                    </div>
                    
                    <group invisible="context.get('show_results', False)">
                        <group string="Settlement">
                            <field name="settlement_id" readonly="1"/>
                        </group>
                        <group string="Import Settings">
                            <field name="import_mode"/>
                        </group>
                    </group>
                    
                    <group invisible="context.get('show_results', False)">
                        <group string="CSV File">
                            <field name="csv_file" filename="csv_filename"/>
                            <field name="csv_filename" invisible="1"/>
                        </group>
                        <group string="CSV Format">
                            <field name="has_header"/>
                            <field name="delimiter"/>
                        </group>
                    </group>
                    
                    <group invisible="context.get('show_results', False)">
                        <group string="Column Mapping">
                            <label for="invoice_column" string="Column Numbers (1-based)"/>
                            <field name="invoice_column"/>
                            <field name="base_fee_column" placeholder="0 = skip"/>
                            <field name="vat_input_column" placeholder="0 = skip"/>
                            <field name="wht_column" placeholder="0 = skip"/>
                        </group>
                        <group string="CSV Preview">
                            <field name="preview_data" widget="text" nolabel="1" readonly="1" 
                                   placeholder="Upload a CSV file to see preview"/>
                        </group>
                    </group>
                    
                    <group invisible="not context.get('show_results', False)">
                        <group string="Import Results">
                            <field name="import_summary" widget="text" nolabel="1" readonly="1"/>
                        </group>
                    </group>
                </sheet>
                
                <footer>
                    <button name="action_download_template" type="object" string="Download Template" 
                            class="btn-secondary" invisible="context.get('show_results', False)"/>
                    <button name="action_import_allocations" type="object" string="Import" 
                            class="btn-primary" invisible="context.get('show_results', False)"/>
                    <button name="action_view_allocations" type="object" string="View Allocations" 
                            class="btn-primary" invisible="not context.get('show_results', False)"/>
                    <button string="Close" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Import Wizard Action -->
    <record id="action_marketplace_fee_allocation_import_wizard" model="ir.actions.act_window">
        <field name="name">Import Fee Allocations</field>
        <field name="res_model">marketplace.fee.allocation.import.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{'default_settlement_id': active_id}</field>
    </record>

</odoo>
