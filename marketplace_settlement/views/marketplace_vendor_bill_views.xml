<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Marketplace Vendor Bill Tree View -->
    <record id="marketplace_vendor_bill_tree_view" model="ir.ui.view">
        <field name="name">marketplace.vendor.bill.tree</field>
        <field name="model">marketplace.vendor.bill</field>
        <field name="arch" type="xml">
            <tree string="Marketplace Vendor Bills" decoration-info="state=='draft'" decoration-success="state=='processed'" decoration-muted="state=='cancelled'">
                <field name="name"/>
                <field name="document_reference"/>
                <field name="document_type"/>
                <field name="trade_channel"/>
                <field name="partner_id"/>
                <field name="use_manual_config" string="Manual Config" optional="hide"/>
                <field name="profile_id" optional="hide"/>
                <field name="date"/>
                <field name="subtotal"/>
                <field name="vat_amount"/>
                <field name="wht_amount"/>
                <field name="total_amount"/>
                <field name="state"/>
                <field name="vendor_bill_id" optional="hide"/>
            </tree>
        </field>
    </record>

    <!-- Marketplace Vendor Bill Form View -->
    <record id="marketplace_vendor_bill_form_view" model="ir.ui.view">
        <field name="name">marketplace.vendor.bill.form</field>
        <field name="model">marketplace.vendor.bill</field>
        <field name="arch" type="xml">
            <form string="Marketplace Vendor Bill">
                <header>
                    <button name="action_link_vendor_bill" string="Link Existing Bill" type="object" 
                            class="oe_highlight" invisible="state != 'draft'"/>
                    <button name="action_create_bill_from_template" string="Create New Bill" type="object" 
                            class="btn-secondary" invisible="state != 'draft'"/>
                    <button name="action_view_vendor_bill" string="View Vendor Bill" type="object" 
                            invisible="not vendor_bill_id"/>
                    <button name="action_toggle_manual_config" string="Toggle Manual Config" type="object" 
                            class="btn-secondary" invisible="state != 'draft'"
                            help="Switch between profile and manual configuration"/>
                    <button name="action_cancel" string="Cancel" type="object" 
                            invisible="state != 'draft'" confirm="Are you sure you want to cancel this document?"/>
                    <button name="action_reset_to_draft" string="Reset to Draft" type="object" 
                            invisible="state != 'cancelled'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,processed"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object" name="action_view_vendor_bill" 
                                icon="fa-file-text-o" invisible="not vendor_bill_id">
                            <div class="o_stat_info">
                                <span class="o_stat_text">Vendor Bill</span>
                            </div>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="name" readonly="1"/>
                            <field name="document_reference" readonly="state != 'draft'"/>
                            <field name="document_type" readonly="state != 'draft'"/>
                            <field name="trade_channel" readonly="state != 'draft'"/>
                            <field name="use_manual_config" readonly="state != 'draft'"/>
                            <field name="profile_id" readonly="state != 'draft'" invisible="use_manual_config"/>
                            <field name="partner_id" readonly="state != 'draft'"/>
                        </group>
                        <group>
                            <field name="date" readonly="state != 'draft'"/>
                            <field name="journal_id" readonly="state != 'draft'"/>
                            <field name="manual_vat_rate" readonly="state != 'draft'" invisible="not use_manual_config"/>
                            <field name="manual_wht_rate" readonly="state != 'draft'" invisible="not use_manual_config"/>
                            <field name="currency_id" invisible="1"/>
                            <field name="company_id" invisible="1"/>
                            <field name="vendor_bill_id" readonly="1" invisible="not vendor_bill_id"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Lines">
                            <field name="line_ids" readonly="state != 'draft'">>
                                <tree editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="description"/>
                                    <field name="account_id"/>
                                    <field name="amount"/>
                                    <field name="vat_rate"/>
                                    <field name="vat_amount"/>
                                    <field name="wht_rate"/>
                                    <field name="wht_amount"/>
                                    <field name="currency_id" invisible="1"/>
                                </tree>
                            </field>
                            <group class="oe_subtotal_footer oe_right">
                                <field name="subtotal"/>
                                <field name="vat_amount"/>
                                <field name="wht_amount"/>
                                <div class="oe_subtotal_footer_separator oe_inline o_td_label">
                                    <label for="total_amount"/>
                                </div>
                                <field name="total_amount" class="oe_subtotal_footer_separator"/>
                            </group>
                        </page>
                        <page string="Notes">
                            <field name="notes" placeholder="Additional notes about this document..." readonly="state != 'draft'"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Marketplace Vendor Bill Search View -->
    <record id="marketplace_vendor_bill_search_view" model="ir.ui.view">
        <field name="name">marketplace.vendor.bill.search</field>
        <field name="model">marketplace.vendor.bill</field>
        <field name="arch" type="xml">
            <search string="Search Marketplace Vendor Bills">
                <field name="name" string="Name/Reference" filter_domain="['|', ('name', 'ilike', self), ('document_reference', 'ilike', self)]"/>
                <field name="document_reference"/>
                <field name="partner_id"/>
                <field name="document_type"/>
                <field name="profile_id"/>
                <field name="trade_channel"/>
                <separator/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Processed" name="processed" domain="[('state', '=', 'processed')]"/>
                <filter string="Cancelled" name="cancelled" domain="[('state', '=', 'cancelled')]"/>
                <separator/>
                <filter string="Manual Configuration" name="manual_config" domain="[('use_manual_config', '=', True)]"/>
                <filter string="Profile Configuration" name="profile_config" domain="[('use_manual_config', '=', False)]"/>
                <separator/>
                <filter string="Shopee TR" name="shopee_tr" domain="[('document_type', '=', 'shopee_tr')]"/>
                <filter string="SPX RC" name="spx_rc" domain="[('document_type', '=', 'spx_rc')]"/>
                <separator/>
                <filter string="Shopee" name="shopee_channel" domain="[('trade_channel', '=', 'shopee')]"/>
                <filter string="Lazada" name="lazada_channel" domain="[('trade_channel', '=', 'lazada')]"/>
                <filter string="Noc Noc" name="nocnoc_channel" domain="[('trade_channel', '=', 'nocnoc')]"/>
                <filter string="TikTok" name="tiktok_channel" domain="[('trade_channel', '=', 'tiktok')]"/>
                <filter string="Other" name="other_channel" domain="[('trade_channel', '=', 'other')]"/>
                <separator/>
                <filter string="This Month" name="this_month" domain="[('date', '&gt;=', context_today().strftime('%Y-%m-01'))]"/>
                <group expand="0" string="Group By">
                    <filter string="Trade Channel" name="group_trade_channel" context="{'group_by': 'trade_channel'}"/>
                    <filter string="Document Type" name="group_document_type" context="{'group_by': 'document_type'}"/>
                    <filter string="Profile" name="group_profile" context="{'group_by': 'profile_id'}"/>
                    <filter string="Partner" name="group_partner" context="{'group_by': 'partner_id'}"/>
                    <filter string="State" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Date" name="group_date" context="{'group_by': 'date:month'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Marketplace Vendor Bill Action -->
    <record id="marketplace_vendor_bill_action" model="ir.actions.act_window">
        <field name="name">Marketplace Vendor Bills</field>
        <field name="res_model">marketplace.vendor.bill</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="marketplace_vendor_bill_search_view"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first marketplace vendor bill!
            </p>
            <p>
                Import and process Shopee Tax Invoices (TR) and SPX Receipts (RC) to link with vendor bills
                for marketplace fees and logistics charges.
            </p>
        </field>
    </record>

    <!-- Action for creating vendor bills with Shopee filter -->
    <record id="action_vendor_bill_shopee" model="ir.actions.act_window">
        <field name="name">Vendor Bills - Shopee</field>
        <field name="res_model">account.move</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('move_type', '=', 'in_invoice'), ('trade_channel', '=', 'shopee')]</field>
        <field name="context">{
            'default_move_type': 'in_invoice',
            'default_trade_channel': 'shopee',
            'search_default_trade_channel': 'shopee'
        }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create Shopee vendor bills!
            </p>
            <p>
                Create and manage vendor bills for Shopee marketplace fees and charges.
            </p>
        </field>
    </record>

