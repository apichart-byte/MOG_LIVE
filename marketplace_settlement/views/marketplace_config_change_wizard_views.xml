<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Marketplace Configuration Change Wizard Form View -->
    <record id="marketplace_config_change_wizard_form_view" model="ir.ui.view">
        <field name="name">marketplace.config.change.wizard.form</field>
        <field name="model">marketplace.config.change.wizard</field>
        <field name="arch" type="xml">
            <form string="Configuration Change">
                <sheet>
                    <group>
                        <field name="vendor_bill_id" readonly="1"/>
                        <field name="use_manual_config" readonly="1"/>
                    </group>
                    <group>
                        <field name="message" nolabel="1"/>
                    </group>
                    <group>
                        <field name="keep_existing_lines"/>
                    </group>
                </sheet>
                <footer>
                    <button string="Apply Changes" name="action_apply_changes" type="object" class="oe_highlight"/>
                    <button string="Cancel" name="action_cancel" type="object" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
