<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Partner Thai Localization Configuration -->
    <record id="view_partner_thai_localization_form" model="ir.ui.view">
        <field name="name">res.partner.form.thai.localization</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="account.view_partner_property_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='accounting_entries']" position="after">
                <group string="Thai Localization" name="thai_localization">
                    <field name="default_thai_income_tax_form"/>
                    <field name="default_thai_wht_income_type"/>
                </group>
            </xpath>
        </field>
    </record>

