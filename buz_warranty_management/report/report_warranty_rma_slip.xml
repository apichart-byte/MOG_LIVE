<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Report Action -->
    <record id="action_report_warranty_rma_slip" model="ir.actions.report">
        <field name="name">RMA Slip</field>
        <field name="model">stock.picking</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">buz_warranty_management.report_warranty_rma_slip_document</field>
        <field name="report_file">buz_warranty_management.report_warranty_rma_slip_document</field>
        <field name="binding_model_id" ref="stock.model_stock_picking"/>
        <field name="binding_type">report</field>
    </record>

    <!-- Report Template -->
    <template id="report_warranty_rma_slip_document">
        <t t-call="web.external_layout">
            <t t-foreach="docs" t-as="o">
                <div class="page">
                    <div class="oe_structure"/>
                    
                    <!-- Header -->
                    <div class="row mt-3 mb-3">
                        <div class="col-8">
                            <h2>
                                <span t-if="o.picking_type_code == 'incoming'">RMA IN - Customer Return</span>
                                <span t-else="">RMA OUT - Replacement Delivery</span>
                            </h2>
                            <h3><span t-field="o.name"/></h3>
                        </div>
                        <div class="col-4 text-right">
                            <div t-if="o.origin">
                                <strong>Origin:</strong> <span t-field="o.origin"/>
                            </div>
                            <div t-if="o.state">
                                <strong>Status:</strong> 
                                <span class="badge badge-info" t-if="o.state == 'draft'">Draft</span>
                                <span class="badge badge-warning" t-elif="o.state == 'waiting'">Waiting</span>
                                <span class="badge badge-primary" t-elif="o.state == 'confirmed'">Confirmed</span>
                                <span class="badge badge-info" t-elif="o.state == 'assigned'">Ready</span>
                                <span class="badge badge-success" t-elif="o.state == 'done'">Done</span>
                                <span class="badge badge-secondary" t-else="">Cancelled</span>
                            </div>
                        </div>
                    </div>

                    <!-- Customer Info -->
                    <div class="row mb-3">
                        <div class="col-6">
                            <strong>Customer:</strong><br/>
                            <div t-field="o.partner_id" 
                                 t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True}'/>
                        </div>
                        <div class="col-6">
                            <div t-if="o.scheduled_date">
                                <strong>Scheduled Date:</strong>
                                <span t-field="o.scheduled_date" t-options='{"widget": "date"}'/>
                            </div>
                            <div t-if="o.date_done">
                                <strong>Effective Date:</strong>
                                <span t-field="o.date_done" t-options='{"widget": "datetime"}'/>
                            </div>
                            <div t-if="o.location_id">
                                <strong>Source:</strong> <span t-field="o.location_id.complete_name"/>
                            </div>
                            <div t-if="o.location_dest_id">
                                <strong>Destination:</strong> <span t-field="o.location_dest_id.complete_name"/>
                            </div>
                        </div>
                    </div>

                    <!-- Products Table -->
                    <table class="table table-sm table-bordered mt-4">
                        <thead>
                            <tr>
                                <th>Product</th>
                                <th>Description</th>
                                <th class="text-center">Lot/Serial</th>
                                <th class="text-right">Demand</th>
                                <th class="text-right">Done</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr t-foreach="o.move_ids_without_package" t-as="move">
                                <td>
                                    <span t-field="move.product_id"/>
                                    <div class="text-muted small">
                                        [<span t-field="move.product_id.default_code"/>]
                                    </div>
                                </td>
                                <td><span t-field="move.description_picking"/></td>
                                <td class="text-center">
                                    <t t-foreach="move.lot_ids" t-as="lot">
                                        <div><span t-field="lot.name"/></div>
                                    </t>
                                    <t t-if="not move.lot_ids and move.move_line_ids">
                                        <t t-foreach="move.move_line_ids" t-as="ml">
                                            <div t-if="ml.lot_id">
                                                <span t-field="ml.lot_id.name"/>
                                            </div>
                                        </t>
                                    </t>
                                </td>
                                <td class="text-right">
                                    <span t-field="move.product_uom_qty"/>
                                    <span t-field="move.product_uom"/>
                                </td>
                                <td class="text-right">
                                    <span t-field="move.quantity_done"/>
                                    <span t-field="move.product_uom"/>
                                </td>
                            </tr>
                        </tbody>
                    </table>

                    <!-- Notes -->
                    <div class="row mt-3" t-if="o.note">
                        <div class="col-12">
                            <strong>Notes:</strong>
                            <p t-field="o.note"/>
                        </div>
                    </div>

                    <!-- Signature Block -->
                    <div class="row mt-5">
                        <div class="col-6 text-center">
                            <div style="border-top: 1px solid black; display: inline-block; min-width: 200px; padding-top: 5px;">
                                Received By
                            </div>
                            <div class="mt-2 text-muted small">Date: _____________</div>
                        </div>
                        <div class="col-6 text-center">
                            <div style="border-top: 1px solid black; display: inline-block; min-width: 200px; padding-top: 5px;">
                                Authorized By
                            </div>
                            <div class="mt-2 text-muted small">Date: _____________</div>
                        </div>
                    </div>

                    <div class="oe_structure"/>
                </div>
            </t>
        </t>
    </template>
</odoo>
