<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Warranty Claim Form Report Template -->
    <template id="report_warranty_claim_form_document">
        <t t-call="web.external_layout">
            <t t-foreach="docs" t-as="o">
                <div class="page">
                    <div class="text-center" style="border: 2px solid #000; padding: 15px; margin-bottom: 20px;">
                        <h2 style="margin: 0;">
                            <strong>WARRANTY CLAIM FORM</strong>
                        </h2>
                        <h4 style="margin: 10px 0 0 0;">
                            <span t-field="o.name"/>
                        </h4>
                    </div>

                    <div class="row">
                        <div class="col-6">
                            <strong>Customer Information:</strong>
                            <div t-field="o.partner_id" 
                                 t-options='{"widget": "contact", "fields": ["address", "name", "phone", "email"], "no_marker": True}'/>
                        </div>
                        <div class="col-6">
                            <table class="table table-sm">
                                <tr>
                                    <td><strong>Claim Number:</strong></td>
                                    <td><span t-field="o.name"/></td>
                                </tr>
                                <tr>
                                    <td><strong>Claim Date:</strong></td>
                                    <td><span t-field="o.claim_date"/></td>
                                </tr>
                                <tr>
                                    <td><strong>Status:</strong></td>
                                    <td>
                                        <span t-if="o.is_under_warranty" class="badge badge-success">Under Warranty</span>
                                        <span t-else="" class="badge badge-danger">Out of Warranty</span>
                                    </td>
                                </tr>
                                <tr>
                                    <td><strong>Claim Status:</strong></td>
                                    <td><span t-field="o.status"/></td>
                                </tr>
                            </table>
                        </div>
                    </div>

                    <h4 class="mt-4 mb-3">Product and Warranty Information</h4>
                    <table class="table table-sm table-bordered">
                        <tr>
                            <td width="25%"><strong>Product:</strong></td>
                            <td width="75%"><span t-field="o.product_id"/></td>
                        </tr>
                        <tr>
                            <td><strong>Serial/Lot Number:</strong></td>
                            <td><span t-field="o.lot_id"/></td>
                        </tr>
                        <tr>
                            <td><strong>Warranty Card:</strong></td>
                            <td><span t-field="o.warranty_card_id"/></td>
                        </tr>
                        <tr>
                            <td><strong>Warranty End Date:</strong></td>
                            <td><span t-field="o.warranty_end_date"/></td>
                        </tr>
                        <tr>
                            <td><strong>Claim Type:</strong></td>
                            <td><span t-field="o.claim_type"/></td>
                        </tr>
                    </table>

                    <div class="mt-4">
                        <h5>Problem Description</h5>
                        <div style="border: 1px solid #ccc; padding: 10px; min-height: 100px; white-space: pre-wrap;">
                            <span t-field="o.description"/>
                        </div>
                    </div>

                    <div t-if="o.internal_notes" class="mt-3">
                        <h5>Internal Notes</h5>
                        <div style="border: 1px solid #ccc; padding: 10px; min-height: 80px; white-space: pre-wrap;">
                            <span t-field="o.internal_notes"/>
                        </div>
                    </div>

                    <div t-if="o.resolution" class="mt-3">
                        <h5>Resolution</h5>
                        <div style="border: 1px solid #ccc; padding: 10px; min-height: 80px; white-space: pre-wrap;">
                            <span t-field="o.resolution"/>
                        </div>
                    </div>

                    <div t-if="not o.is_under_warranty" class="mt-3">
                        <div class="alert alert-warning">
                            <strong>Out-of-Warranty Service</strong>
                            <p t-if="o.cost_estimate">Estimated Cost: <span t-field="o.cost_estimate" t-options='{"widget": "monetary", "display_currency": o.partner_id.currency_id}'/></p>
                            <p t-if="o.quotation_id">Quotation: <span t-field="o.quotation_id.name"/></p>
                        </div>
                    </div>

                    <div class="mt-5 pt-4" style="border-top: 2px solid #ccc;">
                        <div class="row">
                            <div class="col-4 text-center">
                                <p>_______________________</p>
                                <p><strong>Customer Signature</strong></p>
                                <p style="font-size: 10px;">Date: _______________</p>
                            </div>
                            <div class="col-4 text-center">
                                <p>_______________________</p>
                                <p><strong>Technician</strong></p>
                                <p style="font-size: 10px;">Date: _______________</p>
                            </div>
                            <div class="col-4 text-center">
                                <p>_______________________</p>
                                <p><strong>Authorized By</strong></p>
                                <p style="font-size: 10px;">Date: _______________</p>
                            </div>
                        </div>
                    </div>
                </div>
            </t>
        </t>
    </template>

    <!-- Report Action -->
    <record id="action_report_warranty_claim_form" model="ir.actions.report">
        <field name="name">Warranty Claim Form</field>
        <field name="model">warranty.claim</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">buz_warranty_management.report_warranty_claim_form_document</field>
        <field name="report_file">buz_warranty_management.report_warranty_claim_form_document</field>
        <field name="binding_model_id" ref="model_warranty_claim"/>
        <field name="binding_type">report</field>
    </record>

</odoo>
